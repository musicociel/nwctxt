{
  "private": true,
  "name": "nwctxt",
  "version": "0.4.0",
  "description": "Parser and generator for the nwctxt file format used by Note Worthy Composer.",
  "type": "module",
  "scripts": {
    "ci": "npm run build && npm run test && npm run demo:ci && npm run lint && npm run format:check && npm run doc",
    "build": "npm run build:vite && npm run build:ts && npm run build:schema && npm run build:test",
    "build:vite": "vite build",
    "build:ts": "tsc --emitDeclarationOnly",
    "build:test": "tsc --project test/tsconfig.json --noEmit",
    "build:schema": "typescript-json-schema --required --noExtraProps -o dist/schema.json tsconfig.json NWCTXTFile",
    "doc": "typedoc",
    "lint": "eslint .",
    "test": "vitest run",
    "tdd": "vitest",
    "format:check": "prettier . --list-different",
    "format:fix": "prettier . --write",
    "demo:ci": "npm run demo:build && npm run demo:check",
    "demo:dev": "vite -c demo/vite.config.ts",
    "demo:build": "vite -c demo/vite.config.ts build",
    "demo:preview": "vite -c demo/vite.config.ts preview",
    "demo:check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "author": "DivDE <divde@musicociel.fr>",
  "license": "MIT",
  "devDependencies": {
    "@amadeus-it-group/tansu": "0.0.24",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.10.5",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "ajv": "^8.12.0",
    "bootstrap": "^5.3.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "midifile-ts": "^1.5.1",
    "pako": "^2.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3",
    "typescript-json-schema": "^0.62.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "pako": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/musicociel/nwctxt.git"
  }
}
