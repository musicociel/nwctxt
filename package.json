{
  "name": "nwctxt",
  "version": "0.1.0",
  "description": "Parser and generator for the nwctxt file format used by Note Worthy Composer.",
  "files": [
    "dist"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./lowlevel": {
      "default": "./dist/lowlevel/index.js",
      "types": "./dist/lowlevel/index.d.ts"
    },
    "./lowlevel/parser": {
      "default": "./dist/lowlevel/parser.js",
      "types": "./dist/lowlevel/parser.d.ts"
    },
    "./lowlevel/generator": {
      "default": "./dist/lowlevel/generator.js",
      "types": "./dist/lowlevel/generator.d.ts"
    },
    "./parser": {
      "default": "./dist/parser.js",
      "types": "./dist/parser.d.ts"
    },
    "./generator": {
      "default": "./dist/generator.js",
      "types": "./dist/generator.d.ts"
    },
    "./schema.json": {
      "default": "./dist/schema.json"
    }
  },
  "scripts": {
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:ts && npm run build:schema && npm run build:test",
    "build:ts": "tsc",
    "build:test": "tsc --project test/tsconfig.json --noEmit",
    "build:schema": "typescript-json-schema --noExtraProps -o dist/schema.json tsconfig.json NWCTXTFile",
    "lint": "eslint .",
    "test": "vitest run",
    "tdd": "vitest",
    "format:check": "prettier . --list-different",
    "format:fix": "prettier . --write"
  },
  "author": "DivDE <divde@musicociel.fr>",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.12.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "typescript-json-schema": "^0.62.0",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/musicociel/nwctxt.git"
  }
}
